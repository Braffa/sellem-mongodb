# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET      /books                           controllers.Application.listBooks
POST     /books                           controllers.Application.saveBook

GET      /employee                        controllers.Employee.listMyEmployees
GET      /find                            controllers.Employee.findEmployee
GET      /save                            controllers.Employee.saveEmployee
GET      /delete                          controllers.Employee.deleteEmployee
GET      /deletebyname                    controllers.Employee.deleteEmployeeByName

GET		 /savelogin						  controllers.authentication.LoginController.saveLogin		 
GET		 /listlogins					  controllers.authentication.LoginController.listLogins	

GET		 /saveregisteredUser			  controllers.authentication.RegisteredUserController.saveRegisteredUser	
GET		 /listregisteredUsers			  controllers.authentication.RegisteredUserController.listRegisteredUsers	
GET		 /findregistereduser			  controllers.authentication.RegisteredUserController.findRegisteredUser(attribute: String, filter: String)	

GET      /saveproduct                     controllers.product.ProductController.saveProduct
GET      /listproducts                    controllers.product.ProductController.listProducts
GET      /findproduct                     controllers.product.ProductController.findProduct(attribute: String, filter: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file)
